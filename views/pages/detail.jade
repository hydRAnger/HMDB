extends ../layout

block content
  .container
    .row
      .col-md-7
        embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="application/x-shockwave-flash")
      .col-md-5
        dl.dl-horizontal
          dt Movie name
          dd= movie.title
          dt Director name
          dd= movie.director
          dt Nation
          dd= movie.nation
          dt Language
          dd= movie.language
          dt Year
          dd= movie.year
          dt Summary
          dd= movie.summary
